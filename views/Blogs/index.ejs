<%- include("../partials/header") %>

<!-- Modal -->
<div class="modal fade" id="myModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/search_loc">
            <div  class="form-group" >
              <div class="md-form md-outline">
                <i class="fas fa-envelope prefix"></i>
                <label for="emailExample">Title</label>
                <input type="text" autocomplete="off" id="emailExample" name="loc" class="form-control">
              </div>
              </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="document.forms[0].submit()">Search</button>
      </div>
    </div>
  </div>
</div>
  
<!-- ######################################################################## -->

  <div class="container" >
    <div class="jumbotron ">
      <h1>Welcome to our website</h1>
      <p>This is the Blog page</p>
      <a href="/blogs/new" class="btn btn-primary">Add a new Blog</a>
    </div>
    <div class="row">
      <% blogs.forEach(function(blog){ %>
        <!-- <div class=" col-6 col-md-3">
          <div class="thumbnail">
           <p><%= blog.title %></p>
           <img src="<%= blog.image %>" alt="" class="img-responsive">
           <p><%= blog.body %></p>
           <br>
           <a href="/blogs/<%= blog._id %>">Read More</a>
          </div>
        </div> -->
        <div class="card col-12 col-md-3 m-md-15 m-2 p-0" >
          <img src="<%= blog.image %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Show More</a>
          </div>
        </div>
      <% });  %>
    </div>
  </div>



 
  <script defer>

    window.onload = (e) =>{
      var myModal = new bootstrap.Modal(document.getElementById('myModal'))
      myModal.show()
    }
  </script>

