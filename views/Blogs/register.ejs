<%- include("../partials/header") %>


<h2  class="text-center" style="margin-top: 80px; color:blue;"> Sign Up! </h2>
<div class="container  d-flex justify-content-center mt-10">
<form style="width: 50%;"  method="POST" action="/register" >
    <div class="form-group">
        <h6>Name:</h6>
      <input type="text" class="form-control"  placeholder="Name" name="username">
    </div>
    <div class="form-group">
        <h6>Password</h6>
      <input type="text" class="form-control" placeholder="password" name="password">
    </div>
    <div class="form-group">
      <h6>mobile number:</h6>
    <input type="text" class="form-control" placeholder="mobile_no" name="mob_no">
  </div>
  <div class="form-group">
    <h6>Email</h6>
    <input type="text" class="form-control" placeholder="email" name="email">
  </div>
    <input type="submit" class="btn btn-primary " style="width:100%;background-color: midnightblue;" value="Sign Up">
  </form>
</div>

