<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
          <% posts.forEach(function(post){ %>
            <div class="card col-12 col-md-3 m-md-15 m-2 p-0" >
              <img src="<%= post.image %>" class="card-img-top" style="height: 20em">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= post.body.slice(0,80) %></p>
                <a href="/blogs/<%= post._id %>" class="btn btn-primary">Show More</a>
              </div>
            </div>
          <% });  %>
        </div>
    </div>  

    </div>
<%- include("../partials/footer") %>