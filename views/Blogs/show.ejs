        <div class="card mx-auto col-md-8 p-0">
          <img src="<%= data.image %>" class="card-img-top" style="width: 100%; height:500px;" id="show" alt="...">
          <div class="card-body">
            <h5 class="card-title">
              <%= data.title %>
            </h5>
           
            <p class="card-text">
              <%= data.body %>
            </p>
            
            <% for(var i = 0;i <= data.overall_rating;i++ ){ %>
              <i class="fa fa-star" aria-hidden="true" style="color: #ffdf00";></i>
            <% } %>

            <div class="created" style="float: right">
              <span>created by...</span>
              <!-- <form action="/user/<%= user._id %>" method="GET" style="display:inline"  >
                <button class="btn btn-warning mt-2"> <%= user.username %> </button>
                
              </form> -->
              <a href="/user/<%= user._id %>" style= "margin-left: 5px; text-decoration: underline;"> <%= user.username %> </a>
              <form action="/"></form>
            </div>
           
            <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
          </div>
        </div>
      </div>

     

      <div class="row" style="margin-top: 40px; margin-right:30px">
        <!-- <div class="col-md-3 border border-light" style="height: 200px;"></div> -->
        <div class="col-md-8 mx-auto p-0" style="position:relative;">
          <div class="heading" style="display:flex; justify-content: space-between; margin-bottom: 60px;">
            <h3>Comments:</h3>
            <a class="btn btn-success" style="float: right"
              href="/blogs/<%= data._id %>/comments/new">add a new comment</a>
          </div>
      
          <% data.comments.forEach(function(comment){ %>

            <div class="comment_body">
              <p style="margin-top: 30px;"><strong>
                <%= comment.author %> -
              </strong>
              <%= comment.comment %> 
                <!-- <strong>
                  <%=comment.rating %> out of 5.0
                </strong> -->
               
               <% for(var i = 0;i <= comment.rating;i++ ){ %>
                <i class="fa fa-star" aria-hidden="true" style="color: #ffdf00;float: right;"></i>
              <% } %>
            </p>
            </div>
          
            <% }); %>
        </div>
      </div>
    </div>
