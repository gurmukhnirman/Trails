<%- include("../partials/header") %>

<html lang="en"><head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta name="description" content="">
      <meta name="author" content="">
      <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">
  
      <title>search result</title>
      <!-- Bootstrap core CSS -->
      <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">
  
      <!-- Custom styles for this template -->
      <link href="album.css" rel="stylesheet">
    </head>
  
    <body>
      <main role="main">
  
        <section class="jumbotron text-center">
          <div class="container">
            <h1 class="jumbotron-heading"><%= purpose %></h1>
            <p class="lead text-muted">ucimus nulla beatae, expedita qui natus? Assumenda possimus vitae tenetur omnis.</p>
            <p>
              <a href="/" class="btn btn-outline-primary my-2">Home</a>
            </p>
          </div>
        </section>
  
        <div class="album py-5 bg-light">
          <div class="container">
  
            <div class="row">
          <%  blogs.forEach((blog) =>{ %>
                  <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
    
                          <img class="card-img-top"  alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="<%= blog.image %>" data-holder-rendered="true">
                          <div class="card-body">
                            <h3 color = "blue"><%= blog.title %> </h3>
                            <p class="card-text"><%= blog.body.slice(0,100) %></p>
                              <div class="rating" style="margin-bottom: 10px;">
                                    <% for(var i = 0;i <= blog.overall_rating;i++ ){ %>
                                    <i class="fa fa-star" aria-hidden="true" style="color: #ffdf00";></i>
                                    <% } %>
                              </div>
                            <div class="d-flex justify-content-between align-items-center">
                              <div class="btn-group">
                                <a type="button" href="/blogs/<%= blog._id %>" class="btn btn-sm btn-outline-secondary">View</a>
                                <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
                              </div>
                              <small class="text-muted"><%= blog.created.toString().slice(0,10);  %> </a></small>
                            </div>
                          </div>
                        </div>
                      </div>
           <%  }) %>
              
              
            </div>
          </div>
        </div>
  
      </main>
  
      <!-- Bootstrap core JavaScript
      ================================================== -->
      <!-- Placed at the end of the document so the pages load faster -->
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
      <script src="../../assets/js/vendor/popper.min.js"></script>
      <script src="../../dist/js/bootstrap.min.js"></script>
      <script src="../../assets/js/vendor/holder.min.js"></script>
    
  
  <svg xmlns="http://www.w3.org/2000/svg" width="288" height="225" viewBox="0 0 288 225" preserveAspectRatio="none" style="display: none; visibility: hidden; position: absolute; top: -100%; left: -100%;"><defs><style type="text/css"></style></defs><text x="0" y="14" style="font-weight:bold;font-size:14pt;font-family:Arial, Helvetica, Open Sans, sans-serif">Thumbnail</text></svg></body></html>
